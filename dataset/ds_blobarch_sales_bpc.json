		"linkedServiceName": {
			"referenceName": "ls_pulse_blob",
			"type": "LinkedServiceReference"
		},
		"annotations": [],
		"type": "AzureBlob",
		"typeProperties": {
			"format": {
				"type": "TextFormat",
				"columnDelimiter": "|",
				"nullValue": "\\N",
				"treatEmptyAsNull": true,
				"firstRowAsHeader": true
			},
			"folderPath": {
				"value": "@concat('rbhealtharchive/dailysales/mjn/bpc/', substring(formatDateTime(utcnow(),'yyyyMM'),0,6)) ",
				"type": "Expression"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/datasets"
}